<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.ChangePasswordView"
            style="-fx-background-image: url('pacmanImage4.png');"
            prefHeight="650.0" prefWidth="650.0">
    <center>
        <GridPane>
            <padding>
                <Insets left="120" right="120"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints prefWidth="400"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="350"/>
            </rowConstraints>
            <VBox alignment="BOTTOM_LEFT">
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text text="Password:"/>
                <TextField fx:id="password" prefWidth="200" promptText="Please enter your new password"
                           style="-fx-text-fill:  #a52a2a;"/>
                <Text/>
                <Text text="Password:"/>
                <TextField fx:id="checkPassword" prefWidth="200" promptText="Please enter your new password once again"
                           style="-fx-text-fill:  #a52a2a;"/>
                <Text/>
                <Text/>
            </VBox>
            <HBox alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0" spacing="30">
                <Button layoutX="260" mnemonicParsing="false" prefHeight="27.0"
                        prefWidth="150"
                        onMouseClicked="#goBack"
                        text="Cancel"/>
                <Text/>
                <Text/>
                <Button layoutX="260" mnemonicParsing="false" prefHeight="27.0"
                        prefWidth="150"
                        onMouseClicked="#changePassword"
                        text="Change Password"/>
            </HBox>
        </GridPane>
    </center>
</BorderPane>
