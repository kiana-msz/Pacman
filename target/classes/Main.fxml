<BorderPane prefHeight="650.0" prefWidth="650.0" style="-fx-background-image: url('pacmanImage3.png');"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainView">
    <top>
        <HBox alignment="CENTER">
            <Label text="Welcome To Main Menu"/>
        </HBox>
    </top>

    <center>
        <GridPane>
            <padding>
                <Insets left="120" right="120"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints prefWidth="400.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="350.0"/>
                <RowConstraints prefHeight="350.0"/>
            </rowConstraints>

            <VBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Text/>
                <Button alignment="CENTER" layoutX="260" mnemonicParsing="false" onMouseClicked="#startNewGame"
                        prefHeight="27.0" prefWidth="200" text="Start New Game"/>
                <Text/>
                <Text/>
                <Button alignment="CENTER" layoutX="260" mnemonicParsing="false" onMouseClicked="#showScoreBoard"
                        prefHeight="27.0" prefWidth="200" text="ScoreBoard"/>
                <Text/>
                <Text/>
                <Button alignment="CENTER" layoutX="260" mnemonicParsing="false" onMouseClicked="#changePassword"
                        prefHeight="27.0" prefWidth="200" text="Change Password"/>
                <Text/>
                <Text/>
                <Button alignment="CENTER" layoutX="260" mnemonicParsing="false" onMouseClicked="#deleteAccount"
                        prefHeight="27.0" prefWidth="200" text="Delete Account"/>
                <Text/>
                <Text/>
                <Button alignment="CENTER" layoutX="260" mnemonicParsing="false" onMouseClicked="#logout"
                        prefHeight="27.0" prefWidth="200" text="Logout"/>
                <Text/>
                <Text/>
                <Button mnemonicParsing="false" text="mute/unmute" onMouseClicked="#muteUnmute"/>
            </VBox>

        </GridPane>
    </center>

</BorderPane>
